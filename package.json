{
  "name": "saga11",
  "version": "0.8.beta",
  "description": "Website builder based on 11ty & Decap CMS",
  "main": "eleventy.config.js",
  "scripts": {
    "start": "npx netlify-cms-proxy-server & npm run watch",
    "clean": "rm -rf _site",
    "setup": "cp env-example .env",
    "watch": "npx @11ty/eleventy --serve --quiet & npm run tw:watch",
    "build": "npm run tw:build && npm run 11ty:build",
    "11ty:build": "ELEVENTY_ENV=prod eleventy",
    "11ty:debug": "ELEVENTY_ENV=prod DEBUG=* eleventy",
    "tw:build": "npx tailwindcss -c src/theme-grunn/tailwind.config.js -i src/theme-grunn/tailwind/tailwind.css -o src/theme-grunn/assets/css/style.min.css --minify",
    "tw:watch": "npx tailwindcss -c src/theme-grunn/tailwind.config.js -i src/theme-grunn/tailwind/tailwind.css -o src/theme-grunn/assets/css/style.css --watch",
    "upgrade": "npm install @11ty/eleventy@latest & npm update & npm install -D tailwindcss@latest & npm install -D  @tailwindcss/typography@latest & npm install -D  @tailwindcss/forms@latest"
  },
  "keywords": [],
  "author": "mortendk",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "luxon": "^3.0.1",
    "markdown-it-eleventy-img": "^0.10.1",
    "tailwindcss": "^3.3.1"
  },
  "dependencies": {
    "calendar-link": "^2.2.0",
    "dotenv-cli": "^6.0.0",
    "eleventy-plugin-gen-favicons": "^1.1.1",
    "html-minifier": "^4.0.0",
    "netlify-cms-proxy-server": "^1.3.24",
    "netlify-plugin-cache": "^1.0.3"
  }
}
