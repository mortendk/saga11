{% comment %}mobile menu  {% endcomment %}
<nav
  x-cloak
  x-show="openmenu"
  @click.outside="openmenu = false"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="-translate-x-full"
  x-transition:enter-end="translate-x-0"
  x-transition:leave="transition ease-in duration-300"
  x-transition:leave-start="translate-x-0"
  x-transition:leave-end="-translate-x-full"
  class="md:hidden fixed z-50 top-16 w-11/12 h-full bg-white/95 dark:bg-gray-800/95 shadow-xl"
  aria-label="Mobile Menu
">
  {% assign mobileclasses = "block h-20 dark:text-cyan-200 flex items-center pl-4 text-lg border-b border-b-gray-200 dark:border-b-gray-500" %}
  {%- for item in collections.all | eleventyNavigation("main") %}

    {% if not item.children | length %}
      <a href="{{ item.url }}"
      {% if item.url in page.url %}aria-current="page" class="{{mobileclasses}} font-bold"
      {% else  %} class="{{mobileclasses}}"
      {% endif %}
    >{{ item.title }}
      {% else %}

        {% comment %}placeholder {% endcomment %}

        {{ item.title }}
        {% include "icons/chevron-down.svg" %}
        {% include "icons/chevron-right.svg" %}

        <div
        class=""
        x-cloak
        x-show="openmenuitem"
        @mouseover="openmenuitem = true"
        @click.outside="openmenuitem = false"
      >
          {% comment %}We repeat the link from placeholder above so it works on a ipad etc {% endcomment %}
          {{ item.title }}

          {% comment %}Loop next level {% endcomment %}
          {%- for item in collections.all | eleventyNavigation(item.key) %}
            {{ item.title }}
          {% endfor %}

          {% comment %}/ placeholder {% endcomment %}

        {% endif %}

      {%- endfor -%}