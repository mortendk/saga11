---
layout: default.liquid
saga-template-name: notification
---
{%- if env.mode != 'prod' %}
<!-- ___layouts/post/post.liquid  -->
{%- endif -%}

<article class="mx-auto max-w-2xl">

  <h1 class="text-5xl py-4">{{ title }}</h1>

  <div class="bg-gray-200 dark:bg-gray-900 rounded py-2">
    <time class="text-gray-700  dark:text-gray-200">{{ date | formatDate("DDD  T", "DK") }}</time>
    {{ status }}
  </div>
  <div class="text-2xl">
    {{ text }}
  </div>
  <div class="prose prose-xl dark:prose-invert">
    {{ content  }}
  </div>

</article>