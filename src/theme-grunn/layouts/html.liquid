<!DOCTYPE html>
<html lang="en" class="scroll-smooth" x-data="{ darkMode: localStorage.getItem('themeDarkMode') == 'true' }"
      x-init="$watch('darkMode', val => localStorage.setItem('themeDarkMode', val))"
      x-bind:class="{ 'dark': darkMode }">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="{{ eleventy.generator }}">

    {{ verification.header  }}

    {% comment %}Mastodon {% endcomment %}
    {%- if verification.mastodon_verification %}
      <link rel="me" href="{{ site.mastodon_verification }}">
    {% endif -%}

    {% comment %} Github {% endcomment %}
    {%- if verification.github_verification %}
    <link rel="me" href="{{ site.github_verification }}">
    {% endif =%}

    {% comment %}pinterest {% endcomment %}
    {%- if verification.pinterest_verification %}
    <meta name="p:domain_verify" content="{{ site.pinterest_verification }}" />
    {% endif -%}

    {%- if card.text %}
      <meta name="description" content="{{ card.text }}">
    {% else  %}
      <meta name="description" content="{{ verification.description }}">
    {% endif -%}

    {%- if site.keywords %}
      <meta name="keywords" content="{{ verification.keywords }}">
    {% endif -%}

    <meta name="theme-color" content="{{ site.color }}">

    {%- render "_system/icon.liquid" -%}

    {% comment %} OPENGRAPH {% endcomment %}
    {% assign ogImage = image  %}
    {% assign ogTitle = title | default: site.title  %}
    {% assign ogText =  text | default: verification.description %}

    {%- render "_system/head/opengraph.liquid",
      title: ogTitle,
      description: ogText,
      image: ogImage,
      url: page.url,
      site: site,
      env: env,
      some: some
    -%}

    {%- if env.mode == 'prod' %}
    <link href="{{ '/assets/css/style.min.css' | url }}" rel="stylesheet">
    {% else %}
    <link href="{{ '/assets/css/style.css' | url }}" rel="stylesheet">
    {% endif -%}

    {% comment %}title {% endcomment %}
    {% if page.url == "/" %}
      <title>{{ site.title }}</title>
    {% else %}
      <title>{{ title }} | {{ site.title }}</title>
    {% endif %}
  </head>

  {{ content }}

  {% comment %}Service worker{% endcomment %}
  <script>
    if (navigator && navigator.serviceWorker) {
      navigator
        .serviceWorker
        .register('/service-workers.js');
    }
  </script>
  <script src="/assets/js/alpine3.10.3.min.js" defer></script>
  <script src="/assets/js/alpine-persist.min.js" defer></script>

  </body>
</html>
