{%- if env.mode != 'prod' %}<!-- ðŸ‘‹ src/theme-grunn/includes/some/share.liquid -->{%- endif -%}
{% capture thisurl -%}
{{- env.url | append: page.url -}}
{%- endcapture %}

<nav class="flex flex-row space-x-4 mt-4 items-center">

  {% comment %}pinterest {% endcomment %}
  <a class="block w-6 fill-sky-500" href="http://pinterest.com/pin/create/link/?url={{ thisurl }}" target="_blank" rel="noopener noreferrer nofollow" >
    <div class="sr-only">Pinterest</div>
    {% render 'some/pinterest.svg' %}
  </a>

  {% comment %}twitter {% endcomment %}
  <a class="block w-6 fill-red-700" href="https://twitter.com/intent/tweet?text={{thisurl}}%20%23hashtag%20%40{{some.twitter}}" target="_blank" rel="noopener noreferrer nofollow">
    <div class="sr-only">Twitter</div>
    {% render "some/twitter.svg" %}
  </a>

  {% comment %}fb {% endcomment %}
  <a class="block w-6" href="https://www.facebook.com/sharer/sharer.php?u={{ thisurl }}" target="_blank" rel="noopener noreferrer nofollow">
    <div class="sr-only">Facebook</div>
    {% render "some/facebook.svg" %}
  </a>

  {% comment %}linkedin {% endcomment %}
  <a class="block w-6" target="_blank" rel="noopener noreferrer nofollow"
    href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{ thisurl }}&amp;title={{title}}&amp;summary={{teaser}}&amp;source={{site.title}}">
    <div class="sr-only">Linkedin</div>
    {% render "some/linkedin.svg" %}
  </a>

</nav>
