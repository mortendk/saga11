{%- if env.mode != 'prod' %}
<!-- src/theme-grunn/includes/components/form/field/input.liquid -->
{%- endif  -%}

<div class="flex flex-col">

  <label for="form-item-{{ item.title | slugify }}" class="text-lg hover:text-gray-800 hover:cursor-pointer">
    {{ item.title }}
    {% if item.required %} * {% endif %}
  </label>

  <input type="{{ item.inputtype }}" name="{{ item.title | slugify }}" id="form-item-{{ item.title | slugify }}" placeholder="{{ item.placeholder }}" autocomplete="on"
    {% if item.required %}required{% endif %} class="rounded bg-white border-gray-300 text-gray-800
           focus:outline-none focus:border-white focus:ring-2 focus:ring-offset-2 focus:ring-offset-cyan-500 focus:ring-white
           focus:bg-gray-200" />
</div>
