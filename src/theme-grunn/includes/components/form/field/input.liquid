{%- if env.mode != 'prod' %}<!-- ðŸ‘‹ src/theme-grunn/includes/components/form/field/input.liquid -->{%- endif -%}
{% assign inputtitle = item.title | default :  item.name | slugify %}

{% if item.inputtype =="hidden" %}
  <input
    type="hidden"
    name="{{ item.name }}"
    id="form-item-{{ inputtitle }}"
    value="{{ item.value }}"
  >

{% else %}
<div class="flex flex-col">
  <label for="form-item-{{ inputtitle }}" class="hover:cursor-pointer">
    {{ item.title }} {% if item.required %} * {% endif %}
  </label>
  <input
    type="{{ item.inputtype }}"
    name="{{ item.value }}"
    id="form-item-{{ inputtitle }}"
    value="{{ item.value }}"
    placeholder="{{ item.placeholder }}" autocomplete="on"
    {% if item.required %}required{% endif %}
    class="rounded bg-white border-gray-300 text-gray-800 h-8
    focus:outline-none focus:border-white focus:ring-2 focus:ring-offset-2 focus:ring-offset-cyan-500 focus:ring-white focus:bg-gray-200"
  />

  </div>



{% endif %}


