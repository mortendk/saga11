{% comment %}
Page card
------------------------------------------------
This template controls how the pagecard template is rendered.

We count the amount of cards that are attached to the componenet pagecard and defines a grid
that matches - and then includes the right card include that matches
{% endcomment %}


{% if component.page.size >= 4 %}
  <section class="grid grid-cols-4 gap-4 my-4">
{% else if  component.page.size == 3 %}
  <section class="grid grid-cols-3 gap-4 my-4">
{% else if component.page.size == 2 %}
  <section class="grid grid-cols-2 gap-4 my-4">
{% endif %}

{% for page in component.page %}
  {% comment %}test the page and correct the path if its the frontpage aka: / {% endcomment %}
  {% if page == "/" %}
    {% assign path = "/" %}
  {% else  %}
    {% capture path %}
      {{- "/" | append: page -}}
    {% endcapture %}
  {% endif %}

  {% comment %}Grap the data from collections.all  {% endcomment %}
  {% for item in collections.all | getPage( path ) -%}

  {% comment %}Test which card we wanna use  {% endcomment %}
    {% if component.page.size == "1" %}
      {% comment %}Single Card  {% endcomment %}
      <article class="lg:relative bg-white dark:bg-gray-900">

        <div class="lg:py-20">
          <div class="lg:w-1/2 px-8">
            <h2 class="text-5xl text-cyan-700 dark:text-cyan-200 pb-8">{{ item.data.card.title }}</h2>
            <div class="prose prose-xl dark:prose-invert">{{ item.data.card.text }}</div>
            <div class="flex justify-center mt-8">
              <a href="{{ item.url }}" class="inline-block px-4 py-4 m-4 bg-cyan-700 text-white rounded text-xl">
                {{ item.data.title }}
              </a>
            </div>
          </div>
        </div>

        <div class="w-full lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full">
              {% comment %}{% picture
          img=item.data.card.image,
          width=[400, 800],
          sizes="(min-width: 1600px) 50vw, 100vw",
          alt=item.data.card.alt,
          css="lg:absolute lg:inset-0 w-full h-full object-cover"
        %} {% endcomment %}
        </div>

      </article>
      {% comment %}/ Single Card {% endcomment %}

    {% else %}
      {% comment %}Multiple card - If theres more than one show them as a card {% endcomment %}
      <article class="shadow border rounded bg-white">

        <a href="{{ item.url }}">
          <div class= "aspect-video overflow-hidden bg-gray-400">
              {% comment %}{% picture
          img=item.data.card.image,
          width=[400, 800],
          sizes="(min-width: 1600px) 50vw, 100vw",
          alt=item.data.card.alt
        %} {% endcomment %}
          </div>

          <div class="px-4 py-2 border-gray-100 text-gray-800 hover:text-gray-500">
            <h2 class="text-2xl">{{ item.data.title }}</h2>
            <div>{{ item.data.card.text }}</div>
          </div>
        </a>
      </article>
      {% comment %}Multiple card {% endcomment %}

    {% endif %}

  {% endfor %}

{% endfor %}

{% comment %}close the section {% endcomment %}
{% if component.page.size > 1 %}
</section>
{% endif %}
