{%- if env.mode != 'prod' %}<!-- src/theme-grunn/includes/components/image/image.liquid -->{%- endif -%}

<article class="py-4">

  {% comment %}title + text {% endcomment %}
  <article class="mx-auto max-w-3xl pb-4">
    <h3 class="text-5xl text-cyan-700 dark:text-cyan-200 py-4 text-center">
      {{ component.title }}
    </h3>


    {% if component.text %}
    <div class="prose prose-xl dark:prose-invert">
      {{ component.text  }}
    </div>
    {% endif %}
  </article>

  {% render 'image.liquid',
  file: component.image,
  alt: component.title,
  sizes: "(max-width: 640px) 50vw, 100vw",
  widths: "640,1024, 1563",
  format: "webp",
  loading: "lazy",
  css: "w-full"
%}


</article>
