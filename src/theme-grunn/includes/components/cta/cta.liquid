{%- if env.mode != 'prod' %}
<!-- src/theme-grunn/includes/components/cta/cta.liquid-->
{%- endif -%}

<article class="relative bg-white dark:bg-gray-900 my-4">

  <div class="lg:py-20">

    <div class="lg:w-1/2 px-8">
      <h2 class="text-5xl text-cyan-700 dark:text-cyan-100 pb-8">
        {{ component.title }}
      </h2>

      <div class="text-xl">
        {{ component.text }}
      </div>

      <div class="flex justify-center mt-8">
        <a href="{{ component.url }}" class="inline-block px-4 py-4 m-4 bg-cyan-700 text-white rounded text-xl">
          {{ component.cta }}
        </a>
      </div>

    </div>
  </div>

  {% comment %}img {% endcomment %}
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full">

    {% render 'image/image.liquid',
      file: component.image,
      alt: component.alt,
      sizes: "(max-width: 640px) 50vw, 100vw",
      widths: "640, 1024, 1280",
      format: "webp",
      loading: "lazy",
      css: "absolute inset-0 w-full h-full object-cover"
    %}
  </div>
</article>
