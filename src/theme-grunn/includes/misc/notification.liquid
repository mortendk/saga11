<section class="w-full flex flex-col justify-center items-center" aria-label="notification">

  {% for item in collections.allNotification %}
  <div class="w-full relative flex flex-row items-center justify-between
  {% if item.data.status =="alert" %}
    bg-red-900 text-white
  {% elsif item.data.status =="warning" %}
    bg-amber-300 text-orange-800
  {% elsif item.data.status =="info" %}
    bg-sky-200 text-sky-800
  {% endif %}
  " x-data="{ showNotification: true }" x-show="showNotification">

    <div class=" mx-auto flex flex-col md:flex-row items-center">
      <div class="w-4 h-4 mr-2">{% include "icons/bell.svg" %}</div>

      {% if item.data.showlink %}
      <a href="{{ item.url }}">
        {% endif %}

        <h2 class="text-xl font-bold pr-4">
          {{ item.data.title }}
        </h2>
        <div>
          {{ item.data.text | markdown   }}
        </div>

        {% if item.data.showlink %}
      </a>
      {% endif %}

    </div>

  </div>

  {% endfor %}

</section>
