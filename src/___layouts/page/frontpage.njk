---
layout: default.njk
saga-template-name: Frontpage
---
{# PAGE TEMPLATE FRONTPAGE
------------------------------------------------
Template for the frontpage
#}
{%- if env.mode != 'prod' %}
  <!-- ___layouts/page/frontpage.njk  -->
{%- endif -%}

<section class="relative">

  {# Generate image #}
    {% if "http" in image %}
      {% set img = image %}
    {% else %}
      {% set img = page.inputPath | replace("index.md", image) %}
    {% endif %}

    {% set css = "shadow rounded-lg" %}
    {% set format = [webp] %}
    {% set srcset = [400,800, 1600] %}
    {% set sizes = "(min-width: 1600px) 50vw, 100vw" %}
    {% set loading = "eager" %}
    {% image img, srcset, sizes, format, alt,css, loading %}
  {# / Generate image #}

  </div>

  <article class="absolute bg-white/90 w-1/2 top-0 h-full p-8">

    <h1 class="text-7xl font-bold">{{ title }}</h1>

    <div class="my-4 text-xl">
      {{ teaser | safe}}
    </div>

  </article>

</section>

