---
layout: default.njk
saga-template-name: Page default
---
{# PAGE DEFAULT TEAMPLATE
------------------------------------------------
This is the default template for the page type
#}
{%- if env.mode != 'prod' %}<!-- ___layouts/page/page.njk  -->{%- endif -%}

{% include "menu.njk" %}

<hr>

{# 1 level menu #}
1 level menu
{% set menu = collections.all | eleventyNavigation %}
<nav>
  <ul class="flex space-x-4">
  {%- for item in menu %}
  <li>
    <a href="{{ item.url }}"
      {%- if item.url == page.url %}
        aria-current="page" class="text-red-500"
      {%- else  %}
        class="underline"
      {% endif %}
      >
      {{ item.title }}
      {% if item.children | length %} * {% endif %}
    </a>
  </li>
  {%- endfor -%}
  </ul>
<nav>
{# / 1 level menu #}


{# Sublevel 1  #}
Sublevel menu:
{% set submenu = collections.all | eleventyNavigation(eleventyNavigation.key) %}
<nav>
  <ul class="flex space-x-4">
  {%- for item in submenu %}
  <li>
    <a href="{{ item.url }}"
      {%- if item.url == page.url %}
        aria-current="page" class="text-red-500"
      {%- else  %}
        class="underline"
      {% endif %}
      >
      {{ item.title }}
      {% if item.children | length %} * {% endif %}
    </a>
  </li>
  {%- endfor -%}
  </ul>
<nav>
{# / Sublevel 1  #}



{% set bread = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
<nav>
  <a href="{{ env.url }}">home</a>
  {% for item in bread %}
    / <a href="{{item.url }}" class="underline">{{item.key }}</a>
{% endfor %}
</nav>

<article class="" aria-label="Page">

  <h1 class="font-serif text-8xl">{{ title }}</h1>
  {# Generate image #}
    {% if image %}
      {% set css = "shadow rounded-lg" %}
      {% set srcset = [400,800, 1600] %}
      {% set sizes = "(min-width: 1600px) 50vw, 100vw" %}
      {% set loading = "eager" %}
      {% image image, srcset, sizes, format, alt,css, loading %}
    {% endif %}
  {# / Generate image #}

  {# gallery #}
  {% include "gallery.njk" %}

  <div class="wysiwyg">
    {{ content | safe }}
  </div>

  {% include "collection.njk" %}
</article>


