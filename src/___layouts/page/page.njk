  {{ components | debug | safe }}

{% for component in components %}

  {% if component.type == "images" %}
    {% include "components/section-images.njk" %}

  {% elseif component.type == "collection" %}
    {% include "components/section-collection.njk" %}

  {% elseif component.type == "text" %}
    {% include "components/section-text.njk" %}

  {% elseif component.type == "form" %}
    {% include "components/form.njk" %}

  {% elseif component.type == "image" %}
    {% include "components/section-image.njk" %}

  {% elseif component.type == "files" %}
    {% include "components/section-files.njk" %}

  {% elseif component.type == "related" %}

    {% if component.template %}
      {% include component.template %}
    {% else  %}
      {% include "components/default.njk" %}
    {% endif %}

    {% include "components/section-related.njk" %}

  {% endif %}

{% endfor %}




