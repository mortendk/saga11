#}
{%- if env.mode != 'prod' %}<!-- ___layouts/default.njk  -->{%- endif -%}

{# isModalOpen is used to test if theres a modal open then disable the scroll #}
<body class="flex flex-col h-screen bg-slate-100"
      x-data="{'isModalOpen': false}" x-on:keydown.escape="isModalOpen=false"
      :class="isModalOpen ? 'overflow-y-hidden':''"
>

{%- include "header.njk" %}

<main id="main" tabindex="-1" class="pagewidth flex-grow mt-24">
  {{ content | safe }}
</main>


<div class="bg-fuchsia-600 flex space-x-4 justify-center">
  <div>edit:</div>
  <a href="{{ page.filePathStem | netlifycmsedit }}" target="_blank" rel="noopener noreferrer nofollow">Netlifycms</a>
  <a href="#" target="_blank" rel="noopener noreferrer nofollow">github</a>
</div>
