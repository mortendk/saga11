{# macro #}
{% macro menuitems(entry) -%}

{# Items  #}
<li>
  <a href="{{ entry.url }}"
    {# test if the page is the current  #}
    {% if entry.url == page.url %}
      aria-current="page"
      class="underline text-red-600"
    {% else  %}
      class="underline"
    {% endif %}
  >
    {{ entry.title }}
  </a>

  {# sublevel  #}
  {%- if entry.children.length -%}
    <ul>
      {%- for child in entry.children %}
        {{ menuitems(child) }}
      {% endfor -%}
    </ul>
  {%- endif -%}

</li>
{%- endmacro %}
{# /Macro  #}
