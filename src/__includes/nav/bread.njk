{% if eleventyNavigation.key %}


{% set bread = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key,  { includeSelf: true}) %}

<nav class="inline-block p-2">
  {# <a href="{{ env.url }}">Home</a> #}
  {% for item in bread %}

    {% if loop.first %}
    home:
    <a href="{{item.url }}" class="underline">{{item.key }}</a> /
