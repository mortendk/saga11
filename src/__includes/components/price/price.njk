<section class="py-4">
  <div class="mx-auto max-w-3xl">
    <h3 class="text-5xl text-cyan-700 text-center">
      {{ component.title }}
    </h3>

    {% if component.text %}
      <div class="prose prose-xl">
        {{ component.text  | markdown | safe  }}
      </div>
    {% endif %}

    {% picture
      img=component.image,
      width=[200],
      sizes="(min-width: 1600px) 50vw, 100vw",
      css="rounded-sm",
      alt=""
    %}

  </div>

  {# wrapper for the list #}
  <div class="grid grid-cols-{{ component.price | length }} gap-4 mx-auto max-w-2xl">
  {# Price list #}
  {% for item in component.price %}
    <article class="border border-slate-300 rounded shade bg-white">
      {% if item.featured %}
       This one we want you to buy
      {% endif %}

      <h3 class="text-2xl text-cyan-700 mb-4">
        {{ item.title }}
      </h3>

      <div class="text-2xl font-bold text-red-800">
        {{ item.price }}
        </div>

      {% if item.text %}
        <div class="prose">
          {{ item.text  | markdown | safe  }}
        </div>
      {% endif %}

      {# price elements #}
      {% for element in item.elements %}
        <div class="w-4 text-green-500">
          {% include "svg/check.svg" %}
        </div>
        <div
          class="p-2
            {% if element.active %}
              bold
            {% else %}
              line-through text-slate-400
            {% endif %}
          ">
        {{ element.title }}

        </div>
      {% endfor %}
      {# /price elements #}
    </article>
  {% endfor %}
  {# /Price list #}
  </div>
</section>
