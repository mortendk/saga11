{%- if env.mode != 'prod' %}  <!-- src/__includes/components/download/download.njk -->{%- endif  -%}

<article class="max-w-lg mx-auto">
  <h2 class="text-5xl text-cyan-700 text-center">{{ component.title }} </h2>

  <div>

  {% for item in component.files %}

    {# set the file title #}
    {% set title %}
      {% if item.title %}
        {{  item.title }}
      {% else %}
        {{ item.file }}
      {% endif %}
    {% endset %}

    <div class="flex items-center">
      <div class="w-4">{% include "svg/css3.svg" %}</div>
      <a href="{{ item.file }}" class="ml-2 underline">{{ title }}</a>
    </div>

  {% endfor %}

</div>


</article>


