{%- if env.mode != 'prod' %}<!-- src/__includes/components/pagecard/cards/large.njk -->{%- endif -%}
<article class="lg:relative bg-white">

  <div class="mx-auto max-w-7xl w-full pt-16 pb-20 text-center lg:py-48 lg:text-left">
    {# text #}
    <div class="lg:w-1/2  p-4">
      <h2 class="text-5xl text-cyan-700 pb-8">{{ item.data.title }}</h2>
      <div class="text-xl">{{ item.data.card.text | truncate(120, true, "...") }}</div>
      <a href="{{ item.url }}" class="inline-block px-4 py-4 m-4 bg-cyan-800 text-white rounded shadow font-bold text-xl">LINK</a>
    </div>
  </div>

  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full">
    {% image
      img=item.data.card.image,
      width=[400, 800],
      sizes="(min-width: 1600px) 50vw, 100vw",
      alt=item.data.card.alt,
      css="absolute inset-0 w-full h-full object-cover"
    %}
  </div>

</article>
