{%- if env.mode != 'prod' %}<!-- src/__includes/calendar.njk -->{%- endif -%}

{% if calendar.date_start %}

<div class="bg-red-100">

  {{ calendar.date_start | formatDate("DDD") }}

  {% if (calendar.date_allday == true) and (calendar.date_start  | formatDate("ccc d MMMM")  == date_end  | formatDate("ccc d MMMM") ) %}
    {# Day is the same + all day   #}
    <div class="text-3xl">{{ calendar.date_start | formatDate("ccc d MMMM") }}</div>
    <div class="text-xl">All Day</div>

  {% elseif (calendar.date_start  | formatDate("ccc d MMMM")  == calendar.date_end  | formatDate("ccc d MMMM") ) %}
    {# Day is the same #}
    <div class="text-3xl">{{ calendar.date_start | formatDate("ccc d MMMM") }}</div>
    <div class="text-xl">{{ calendar.date_start | formatDate("HH:mm") }} - {{ calendar.date_end | formatDate("HH:mm") }}</div>

  {% elseif (date_start  | formatDate("yyyy")  == date_end  | formatDate("yyyy") ) %}
    {# Day is the year #}
    <div class="text-3xl">
      {{ calendar.date_start | formatDate("d MMMM HH:mm (ccc)") }} - {{ calendar.date_end | formatDate("ccc d MMMM HH:mm (ccc) ") }}  {{ calendar.date_start  | formatDate("yy") }}
    </div>
  {% else %}
    <div class="text-3xl">{{ calendar.date_start | formatDate("ccc d MMMM yy HH:mm") }} - {{ calendar.date_end | formatDate("ccc d MMMM HH:mm") }}</div>
  {% endif %}

{# Add to calendar link #}
  <div>
  Add to calendar:
  </div>
  <div>
  <a href="{% calendar google, calendar.date_start, calendar.date_end, calendar.date_allday, title, teaser, location %}" target="_blank" class="inline-block p-2 bg-red-300">Google</a>
  <a href="{% calendar ics, calendar.date_start, calendar.date_end, calendar.date_allday, title, teaser, location %}" target="_blank" class="inline-block p-2 bg-red-300">ics</a>
  <a href="{% calendar outlook, calendar.date_start, calendar.date_end, calendar.date_allday, title, teaser, location %}" target="_blank" class="inline-block p-2 bg-red-300">outlook</a>
  <a href="{% calendar office365, calendar.date_start, calendar.date_end, calendar.date_allday, title, teaser, location %}" target="_blank" class="inline-block p-2 bg-red-300">office365</a>
  <a href="{% calendar yahoo, calendar.date_start, calendar.date_end, calendar.date_allday, title, teaser, location %}" target="_blank" class="inline-block p-2 bg-red-300">yahoo</a>
  </div>
</div>

{% endif %}
