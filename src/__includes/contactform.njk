{# CONTACT FORM
------------------------------------------------
Basic form that works out of the box on netlify
#}
{%- if env.mode != 'prod' %}<!-- src/__includes/contactform.njk  -->{%- endif -%}

<form
  class="flex flex-col space-y-4 mb-8 bg-white"
  name="Contact"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  action="/success/"
>
  {# <div data-netlify-recaptcha="true"></div> #}
  <div class="hidden">
    <label for="supersecret">secret</label>
    <input name="bot-field" id="supersecret" />
  </div>


  <div class="flex flex-col">
    <label for="first-name">First *</label>
    <input type="text" name="firs" id="first" placeholder="Name" required />
  </div>


  <div class="flex flex-col">
    <label for="email">E-mail *:</label>
    <input type="email" name="email" placeholder="Email" id="email" required />
  </div>

  <div class="flex flex-col">
    <label for="message">Message</label>
    <textarea name="message" id="message" cols="30" rows="10" class="form-textarea"></textarea>

  {# submit button #}
  <button type="submit" aria-label="Submit form" class="bg-red-400">
    Send
  </button>

</form>
