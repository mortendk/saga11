{# PAGE DEFAULT TEAMPLATE
------------------------------------------------
This is the default template for the page type
#}
{%- if env.mode != 'prod' %}<!-- _layouts/page/page.njk  -->{%- endif -%}

<article class="flex flex-col md:flex-row ">
  <div class="md:w-2/3">

    <h1 class="text-5xl">{{ title }}</h1>

    {% if image %}
      {% image image, [400,800, 1200],"(min-width: 30em) 50vw, 100vw",['webp'],alt %}
    {% endif %}

    <p class="text-xl my-4">
      {{ teaser | safe }}
    </p>

    <div class="prose">
      {{ content | safe }}
    </div>

  </div>
  <div class="md:w-1/3">
  {# sidebar #}
  </div>
</article>

