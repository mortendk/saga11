{%- if env.mode != 'prod' %}<!-- ðŸ‘‹ sections src/_system/head/opengraph.liquid -->{%- endif  -%}

{% comment %} Image{% endcomment %}
{% capture ogimage %}
  {% if image %}
    {% render 'image/imageurl.liquid', file: image, widths: "1200",format: "webp" %}
  {% endif %}
{% endcapture %}

{% assign url = env.url  %}
{% assign img = ogimage | strip | prepend: url %}

<meta itemprop="name" content="site : {{ site.title }}"/>
<meta itemprop="description" content="{{ description }}"/>
<meta itemprop="image" content="{{ img }}"/>
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ title }}">
<meta property="og:url" content="{{ url }} ">
<meta property="og:description" content="{{ description }}">
<meta property="og:type" content="website">
<meta property="og:image" content="{{ img }}">
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="630"/>
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title }}">
<meta name="twitter:description" content="{{ description }}">
<meta name="twitter:image" content="{{ img }}">
<meta name="twitter:image:src" content="{{ img  }}">
{% if some.twitter %}
  <meta name="twitter:creator" content="@{{ some.twitter }}">
  <meta name="twitter:site" content="@{{ some.twitter }}"/>
{% endif %}
