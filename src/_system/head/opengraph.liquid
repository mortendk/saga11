{% comment %} Image {% endcomment %}
{%- capture ogimage -%}
  {% assign width = '1200' | split: ', ' %}
  {%- if image -%}
    {{ env.url }}{%- imageurl image, width -%}
  {%- else -%}
    {{ env.url }}{%- imageurl site.opengraph, width -%}
  {%- endif -%}
{%- endcapture -%}

{% assign url = env.url | append: url %}

<meta itemprop="name" content="site : {{ site.title }}"/>
<meta itemprop="description" content="{{ description }}"/>
<meta itemprop="image" content="{{ ogimage }}"/>
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ title }}">
<meta property="og:url" content="{{ url }} ">
<meta property="og:description" content="{{ description }}">
<meta property="og:type" content="website">
<meta property="og:image" content="{{ ogimage }}">
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="630"/>

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title }}">
<meta name="twitter:description" content="{{ description }}">
<meta name="twitter:image" content="{{ ogimage }}">
<meta name="twitter:image:src" content="{{ ogimage }}">
{% if some.twitter %}
  <meta name="twitter:creator" content="@{{ some.twitter }}">
  <meta name="twitter:site" content="@{{ some.twitter }}"/>
{% endif %}
