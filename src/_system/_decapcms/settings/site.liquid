      - label: "ℹ️ Site Settings"
        name: "sitesettings"
        file: "src/content/_data/site.json"
        fields:
          - { label: Title, name: title, widget: string }
          - { label: "Shortname", name: shortname, widget: string }
          - { label: "Description", name: description, widget: text }
          - { label: 🌇  site icon, name: icon, widget: image, choose_url: false, required: false, hint: "Used for the general site icon - upload in svg "}
          - { label: 📱 Apple screenicon, name: touchicon, widget: image, choose_url: false, required: false, hint: "Apple touch icon "}
          - { label: 📲 maskable icon, name: maskableicon, widget: image, choose_url: false, required: false, hint: "Maskable icon for android phone use: https://maskable.app/editor"}
          - { label: Icon color, name: faviconcolor, widget: color, required: true, enableAlpha : true }
          - { label: Browesercolor, name: color, widget: color, required: false }
          - { label: opengraph, name: opengraph, widget: image, default: "/content/upload/saga11icon.svg", choose_url: false, required: false, hint: "opengraph"}
          - { label: "Manifest Display",
              name: "display",
              widget: "select",
              default: "standalone",
              options: ["fullscreen","standalone","minimal-ui","browser"]
            }
          - { label: "🧡 RSS Feed", name: rss, widget: boolean, default: true, hint: "/feed.xml",}
          - { label: "🧡 RSS Author", name: authorname, widget: string, required: false, hint: "Feed Author name"}
          - { label: "🧡 RSS Author Email" , name: authoremail,widget: string, required: false,hint: "Feed Author name"}
