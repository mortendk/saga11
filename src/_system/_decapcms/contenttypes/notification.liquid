  # ---------------------------------------------------------------
  # Notifications
  # ---------------------------------------------------------------
  - name: notification
    label: 📣 Notifications
    label_singular: 📣 Notification
    description: "Notifications and alerts"
    folder: "src/content/notification"
    slug: "{{title}}"
    preview_path: notification/{{title}}/
    create: true
    delete: true
    editor:
      preview: false
    # Overview
    summary: "{% raw %}{{title}} Status: [{{status}}]{% endraw %}"
    sortable_fields: ["title", "date"]
    view_filters:
      - label: Drafts
        field: eleventyExcludeFromCollections
        pattern: true
    view_groups:
      - label: Tags
        field: tags
    fields:
{% include "_system/_decapcms/widgets/string",
    name: "title",
    label: "title",
    default: "",
    required: true,
    hint: ""
%}
      - label: 💁🏽‍♂️ status
        name: "status"
        widget: "select"
        multiple: false
        options: ["info", "warning", "alert"]
        default: "info"

      - label: "❗️info"
        name: "text"
        widget: "markdown"
        buttons:
          - bold
          - italic
          - link
        required: false

      - label: "link to page"
        name: "showlink"
        widget: "boolean"
        default: false

{% include "_system/_decapcms/widgets/markdown",
  name: "body",
  label: "Body",
  default: "",
  required: "false",
  hint: "help text"
%}

{% include "_system/_decapcms/widgets/datetime",
  name: "date",
  label: "Date",
  default: "true",
  required: "false",
  hint: ""
%}

{% include "_system/_decapcms/widgets/boolean",
  name: "eleventyExcludeFromCollections",
  label: "😴 Draft Mode",
  default: "false",
  required: "false",
  hint: "Draft mode"
%}

