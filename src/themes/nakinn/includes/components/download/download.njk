{%- endif  -%}

{# title + text #}

{{ component.title }}

{% if component.text %}

  {{ component.text  | markdown | safe  }}

{% endif %}

{% for item in component.files %}

  {# set the file title #}
  {% set title %}
  {% if item.title %}
    {{  item.title }}
  {% else %}
    {{ item.file }}
  {% endif %}
  {% endset %}

  {# Download Card #}
  <a href="{{ item.file }}"
      class="flex flex-row items-center basis-60 p-2 m-2 bg-white dark:bg-gray-900 shadow rounded-md
    ">
    {# icon #}

    {% include "icons/arrow-down-tray.svg" %}

    {{ title }}

  {% endfor %}