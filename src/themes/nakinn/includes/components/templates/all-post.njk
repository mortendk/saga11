{% for item in collections.allPosts  %}
  <a href="{{ item.url }}">{{ item.data.title }}</a>
    {% picture
      img=item.data.card.image,
      width=[400,800],
      sizes="(min-width: 1600px) 50vw, 100vw",
      css="",
      loading = "eager"
    %}

  {{ item.data.teaser }}
  {{ item.data.date | formatDate("DDD  T", "DK") }}

{% endfor %}

