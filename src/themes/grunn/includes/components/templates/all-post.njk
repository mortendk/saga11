{%- if env.mode != 'prod' %}
  <!-- src/themes/grunn/includes/components/templates/all-post.njk -->
{%- endif -%}

<h2 class="text-5xl text-center text-cyan-700 dark:text-cyan-200">All Post</h2>

<section class="grid md:grid-cols-3 gap-4 py-4">

  {% for item in collections.allPosts %}

    <article class="shadow border dark:border-none border-gray-100 bg-white dark:bg-gray-900">
      <a href="{{ item.url }}">
        <div class="shadow-lg aspect-video overflow-hidden">

          {% picture
          img=item.data.card.image,
          width=[400,800],
          sizes="(min-width: 1600px) 50vw, 100vw",
          css="",
          loading = "eager"
      %}

        </div>
        <div class="p-4">
          <div class="text-2xl text-cyan-800 dark:text-cyan-200">{{item.data.card.title }}</div>
          <div class="mt-2">{{ item.data.card.text }}</div>
          <time class="font-bold text-gray-600 dark:text-gray-200 text-right py-4 block">{{ item.date | formatDate("DDD  T", "DK") }}</time>
        </div>
      </div>
    </a>
  </article>

{% endfor %}
</section>