{%- if env.mode != 'prod' %}  <!-- src/themes/grunn/includes/components/form/form.njk -->{%- endif  -%}

<section class="md:max-w-xl mx-auto py-4">

  <h3 class="text-cyan-700 dark:text-cyan-200 text-4xl mb-4">{{ component.title }}</h3>

  {% if component.text %}
    <div class="prose prose-lg dark:prose-invert">
      {{ component.text  | markdown | safe  }}
    </div>
  {% endif %}


  <form
    class="flex flex-col space-y-4 mb-4"
    name="{{ component.name | urlencode }}"
    method="POST"
    data-netlify="true"
    netlify-honeypot="bot-field"
    action="/{{ component.action }}/"
  >
    {# <div data-netlify-recaptcha="true"></div> #}
    <div class="hidden">
      <label for="supersecret">secret</label>
      <input name="bot-field" id="supersecret" />
    </div>

    {# Create form elements #}
    {% for item in component.elements %}

      {% if item.type == "textarea" %}
        {% include "components/form/field/textarea.njk" %}
      {% elif item.type == "text" %}
        {% include "components/form/field/input.njk" %}
      {% elif item.type == "options" %}
        {% include "components/form/field/options.njk" %}
     {% endif %}

    {% endfor %}


    <div class="flex flex-row justify-end">

      <button
          aria-label="Submit"
          class="px-4 py-2 rounded-sm font-bold uppercase bg-lime-400 text-green-900 hover:bg-lime-300">Send</button>
      </div>

  </form>

</section>
