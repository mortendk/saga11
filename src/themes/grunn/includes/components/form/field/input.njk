{%- if env.mode != 'prod' %}
  <!-- src/themes/grunn/includes/components/form/field/input.njk -->
{%- endif  -%}
<div class="flex flex-col">

  <label
    for="form-item-{{ item.title | slugify }}"
    class="font-bold text-lg hover:text-gray-800 hover:cursor-pointer">
    {{ item.title }}
    {% if item.required %} * {% endif %}
  </label>

  <input
    type="{{ item.inputtype }}"
    name="{{ item.title | slugify }}"
    id="form-item-{{ item.title | slugify }}"
    placeholder="{{ item.placeholder }} "
    {% if item.required %}required{% endif %}
    class="rounded bg-gray-200 border-gray-300 text-gray-800
           focus:outline-none focus:border-white focus:ring-2 focus:ring-offset-2 focus:ring-offset-cyan-500 focus:ring-white
           focus:bg-gray-200"
/>
</div>