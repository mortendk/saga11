{# test if theres data for the location link #}
{% if (site.adress | length) and (site.zip |length)  %}

{# This is used for the iphone / android so they  can work prober cause ... #}
<script>
  function openinmap(map){
  // If it's an iPhone..
  if( (navigator.platform.indexOf("iPhone") != -1)
    || (navigator.platform.indexOf("iPod") != -1)
    || (navigator.platform.indexOf("iPad") != -1))
      window.open("maps://maps.google.com/?q=" + map);
  else
      window.open("https://maps.google.com/?q=" + map );
  }
</script>
<div class="text-center">
    {{ site.adress }}
    {{ site.zip }}
    {{ site.country  }}

  <button
    onclick="openinmap('{{ site.adress }},{{ site.zip }},{{ site.country }}')"
    target="_blank" class="inline-flex flex-row items-center  p-1 font-bold"
  >
    <div class="w-4 mr-2">
      {% include "svg/map-pin.svg" %}
    </div>
    <div >Map</div>

  </button>
</div>

{% endif %}
