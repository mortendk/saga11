---
layout: html.njk
saga-template-name: Link in Bio
---
{%- if env.mode != 'prod' %}
  <!-- ___layouts/page/frontpage.njk  -->
{%- endif -%}

<body class="flex flex-col h-screen bg-gray-900">

  <main id="main" tabindex="-1" class="flex-grow pt-14 bg-gradient-to-t from-gray-600 to-gray-900 text-white">

    <div class="max-w-lg mx-auto ">

      <article class="flex flex-col">

        <div class="center-center">
          {% picture
          img=image,
          width=[400,800],
          sizes="(min-width: 1600px) 50vw, 100vw",
          css="aspect-squre shadow rounded-full w-40 border-4 border-red-400",
          loading = "eager"
        %}
        </div>

        <h2 class="text-4xl text-center py-2">{{ title }}</h2>
        <div class="text-xl mx-auto p-2">{{ content | safe }}</div>

      </article>

      <div class="text-2xl font-bold text-center p-4">
        <a href="{{env.url}}">{{ site.title }}</a>
      </div>

      {% include "components/all.njk" %}

      <article class="flex flex-col">
        {% for item in link %}

          {# Test if the user added the label ... #}
          {% if item.label == "" %}
            {% set label = item.url %}
          {% else %}
            {% set label = item.label %}
          {% endif %}

          <a href="{{ item.url }}" rel="noopener noreferrer nofollow" class="block bg-white/90 p-4 m-4 rounded-lg text-blue-500 font-bold text-xl text-center">{{ label }}</a>
        {% endfor %}
      </article>

      <H2 class="text-center">Social Media Platforms</H2>
      {# SOME icons  #}
      {% set css = "w-12 h-12 block text-sky-400 hover:text-sky-700 " %}
      {% set linkattributes %}
      target=_blank rel=noopener noreferrer nofollow
    {% endset %}

      <nav class="flex flex-wrap space-x-4 space-y-4" aria-label="Menu Social media links">

        {% if settings.rss %}
          <a href="/feed.xml" class="{{css}}">
            <span class="sr-only">RSS Feed</span>
            {% include "svg/rss.svg" %}
          </a>
        {% endif %}

        {% if some.linkedin %}
          <a href="https://linkedin.com/in/{{ some.linkedin }}" {{ linkattributes }} class="{{css}}">
            <span class="sr-only">LinkedIn</span>
            {% include "svg/some/linkedin.svg" %}
          </a>
        {% endif %}

        {% if some.facebook %}
          <a href="https://facebook.com/{{ some.facebook }}" {{ linkattributes }} class="{{css}}">
            <span class="sr-only">Facebook</span>
            {% include "svg/some/facebook.svg" %}
          </a>
        {% endif %}

        {% if some.instagram %}
          <a href="https://instagram.com/{{ some.instagram }}" {{ linkattributes }} class="{{css}}">
            <span class="sr-only">Instagram</span>
            {% include "svg/some/instagram.svg" %}
          </a>
        {% endif %}

        {% if some.youtube %}
          <a href="https://instagram.com/{{ some.youtube }}" {{ linkattributes }}  class="{{css}}">
            <span class="sr-only">youtube</span>
            {% include "svg/some/youtube.svg" %}
          </a>
        {% endif %}

        {% if some.twitter %}
          <a href="https://twitter.com/{{ some.twitter }}" {{ linkattributes }}  class="{{css}}">
            <span class="sr-only">Twitter</span>
            {% include "svg/some/twitter.svg" %}
          </a>
        {% endif %}

        {% if some.github %}
          <a href="https://github.com/{{ some.github }}" {{ linkattributes }}  class="{{css}}">
            <span class="sr-only">GitHub</span>
            {% include "svg/some/github.svg" %}
          </a>
        {% endif %}

        {% if some.dribble %}
          <a href="https://dribbble.com/{{ some.dribble }}" {{ linkattributes }}  class="{{css}}">
            <span class="sr-only">Dribbble</span>
            {% include "svg/some/dribble.svg" %}
          </a>
        {% endif %}

        {% if some.tiktok %}
          <a href="https://tiktok.com/@{{ some.tiktok }}" {{ linkattributes }}  class="{{ css }}">
            <span class="sr-only">tiktok</span>
            {% include "svg/some/tiktok.svg" %}
          </a>
        {% endif %}

        {% if some.twitch %}
          <a href="https://twitch.tv/{{ some.twitch }}" {{ linkattributes }}  class="{{ css }}">
            <span class="sr-only">twitch</span>
            {% include "svg/some/twitch.svg" %}
          </a>
        {% endif %}

        {% if some.patron %}
          <a href="https://patron.com/{{ some.patron }}" {{ linkattributes }}  class="{{ css }}">
        patron
      </a>
        {% endif %}

        {% if some.discord %}
          <a href="https://discord.gg/{{ some.discord }}" {{ linkattributes }}  class="{{ css }}">
            <span class="sr-only">discord</span>
            {% include "svg/some/discord.svg" %}
          </a>
        {% endif %}

        {% if some.soundcloud %}
          <a href="https://soundcloud.com/{{ some.soundcloud }}" {{ linkattributes }}  class="{{ css }}">
            <span class="sr-only">Soundcloud</span>
            {% include "svg/some/soundcloud.svg" %}
          </a>
        {% endif %}

        {% if some.bandcamp %}
          <a href="https://{{ some.bandcamp }}.bandcamp.com" {{ linkattributes }}  class="{{ css }}">
            <span class="sr-only">bandcamp</span>
            {% include "svg/some/bandcamp.svg" %}
          </a>
        {% endif %}

      </div>
    </main>

    <footer class="bg-gray-600 text-center p-4 text-white">
      <a href="{{env.url}}">{{ site.title }}</a>
    </footer>