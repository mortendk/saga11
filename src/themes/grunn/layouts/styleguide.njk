---
layout: html.njk
---
{# This layout is used for the styleguide  #}
{%- if env.mode != 'prod' %}<!-- ðŸ‘‹ layouts/styleguide.njk -->{%- endif -%}

{# isModalOpen is used to test if theres a modal open then disable the scroll #}
<body
  class="flex flex-col h-screen bg-background-100 text-neutral-900 dark:bg-background-800 dark:text-neutral-50"
  x-data="{'isModalOpen': false, isEditvisible: false, styleguideMenu:false}"
  x-on:keydown.escape="isModalOpen=false"
  x-on:keydown.cmd.shift.e="isEditvisible = ! isEditvisible"
  :class="isModalOpen ? 'overflow-y-hidden':''"
>


<header class="bg-white/80 shadow dark:bg-background-900 fixed w-full">
  <div class="h-12 flex flex-row justify-between items-center px-8">

    <div class="flex flex-row">
      <button
        @click="styleguideMenu = !styleguideMenu"
        class="w-10 block space-x-2 focus:outline-none"
        type="button"
        aria-label="toggle mobile menu"
        >
        <span class="relative inline-block w-10 h-6">
          <span class="
          block mt-2 absolute w-6 h-1 bg-neutral-700 dark:bg-neutral-400 rounded-md
          transition-all ease-linear duration-75
          before:absolute before:-top-2 before:h-1 before:w-6 before:bg-neutral-600 dark:before:bg-neutral-300 before:rounded-md before:content-[''] before:block
          after:absolute after:top-2 after:h-1 after:w-6 after:bg-neutral-800 dark:after:bg-neutral-500  after:rounded-md after:content-[''] after:block
          "
          :class="styleguideMenu ? 'rotate-45 before:rotate-90 before:translate-y-2 before:bg-neutral-700  after:opacity-0' : '' "
          ></span>
        </span>
      </button>

      <div>
        <a href="/styleguide"> ðŸŽˆ Styleguide </a> / {{ title | upper }}
      </div>
    </div>

    <button @click="darkMode = !darkMode" class="w-8" aria-label="toggle color scheme">
      {# darkmode on #}
      <div x-show="darkMode" class="bg-neutral-200 p-2 rounded">
        <div class="w-4 text-neutral-700">{% include "icons/sun.svg" %}</div>
      </div>
      {# darkmode not actived #}
      <div x-show="!darkMode" class="bg-neutral-700 p-2 rounded">
        <div class="w-4 text-neutral-100">{% include "icons/moon.svg" %}</div>
      </div>
    </button>

    {# <div>
    sm
    lg
    xl
    2xl
    </div> #}

    </div>
</header>

<main id="main" tabindex="-1" class="mt-12 bg-background-50 h-full md:w-9/12 md:mx-auto">

  {{ content | safe }}

</main>

{% include "responsive.njk" %}


<div class="bg-white mt-12 p-4 fixed  overflow-y-auto h-screen shadow-lg w-52" x-show="!styleguideMenu">

  {% for item in collections.styleguide | sortByFilepath %}
    {# todo: group based on the filepath ?{{ item.filePathStem | replace('/_system/styleguide/', '')}}  #}
    <a href="{{ item.url }}" class="block text-neutral-800 {% if item.url in page.url %} font-bold{% endif %}">
      {% if item.url in page.url %} ðŸ‘‰{% endif %}
      {{item.data.title}}
    </a>
  {% endfor %}

</div>


