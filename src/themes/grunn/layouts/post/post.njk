---
layout: default.njk
saga-template-name: Post Default
---
{# POST
------------------------------------------------
post template
#}
{%- if env.mode != 'prod' %}
  <!-- ___layouts/post/post.njk  -->
{%- endif -%}
<h1 class="text-6xl dark:text-cyan-200 pb-4">{{ title }}</h1>

{% if image %}
  <div class="aspect-video overflow-hidden shadow-lg ">
    {% picture
      img=image,
      width=[640,1280,1536],
      sizes="(max-width: 640px) 50vw, 100vw",
      css="",
      loading = "eager"
  %}
  </div>
{% endif %}

<article class="flex flex-col md:flex-row ">
  <div class="md:w-4/6">

    <footer class="mt-4 text-lg flex flex-row space-x-4">


    {% for tag in tags %}

      {% for item in collections.all | getPage("/tag/" + tag + "/") %}

        <a href="/tag/{{ tag }}" class="inline-flex items-center px-2 py-1 rounded text-sm text-red-800 bg-red-100">

          {% if item.data.icon %}
            <div class="h-4 w-4 mr-2">{% include  item.data.icon %}</div>
          {% endif %}
          {{ item.data.title }}

        </a>

      {% endfor %}
    {% endfor %}

      <time>{{ date | formatDate("DDD  T", "DK") }}</time>
    </footer>

    <div class="prose prose-xl max-w-full dark:prose-invert">
      {{ content | safe }}
    </div>

    {# Pre next nav #}
    {% include "nav/post-pre-next.njk" %}

  </div>
  {# sidebar #}
  <div class="md:w-2/6 md:ml-4">

    {# list of post #}
    {% include "nav/posts.njk" %}

    {% include "share.njk" %}

  </div>

</article>
