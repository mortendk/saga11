{% comment %}
  Generate image
{% endcomment %}
{% render 'image.liquid',
  file: image,
  alt: title,
  sizes: "(min-width: 30em) 50vw, 100vw",
  widths: "400, 800, 1200",
  format: "webp",
  loading: "lazy",
  css: "w-full"
%}


{% comment %}
  Pre next collection
{% endcomment %}
{% assign previous = collections.copenhellshows | getPreviousCollectionItem %}
{% assign next =    collections.copenhellshows | getNextCollectionItem %}
{% render 'nav/pre-next.liquid',
      previous: previous,
      next: next,
      pretext: previous.data.show.object.title,
      nexttext: next.data.show.object.title,
%}

